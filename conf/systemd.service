[Unit]
Description==Anki sync server
After=network.target

[Service]
Type=simple
User=__APP__
Group=__APP__
Environment="SYNC_PORT=__PORT__"
Environment="SYNC_HOST=127.0.0.1"
Environment="SYNC_BASE=__DATA_DIR__/"
Environment="SYNC_USER1=__ADMIN__:__PASSWORD__"
WorkingDirectory=__INSTALL_DIR__/
ExecStart=__INSTALL_DIR__/venv/bin/python3 -m anki.syncserver

[Install]
WantedBy=multi-user.target
